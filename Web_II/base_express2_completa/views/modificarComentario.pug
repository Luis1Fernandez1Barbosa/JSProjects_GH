extends ./layout/index.pug 
block compartircontenido
    h1  #{pagina}
    main.container.mt-5 
        .row 
            each comentario in comentarios 
                .col-md.col-lg-4.mv-4 
                    .card 
                        img.card-img-top(src=`/img/${comentario.imagen}.png`)
                        .card-body 
                            h3=comentario.id 
                            p
                            | #{comentario.opinion}
                            blockquote 
                            a(href='/modificarCom?id=${comentario.id}', class='d-block btn btn-success btn-clock') Modificar 
                            |
                            a(href='#', class='d-block btn btn-success btn-clock') Eliminar