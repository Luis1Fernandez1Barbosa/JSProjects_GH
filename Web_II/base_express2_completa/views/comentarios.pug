extends ./layout/index.pug
block compartircontenido 
    main
        .container.py-5 
            h1.text-center.mt-5 #{pagina}
            .row
                .col-md-12
                    h2.d-block.w-100.text-center Agregar Comentarios 
                    if(errores)
                        each error in errores 
                            .alert.col.alert-danger.text-center=error.mensaje 
                
                .row.d-flex.justify-content-center.col.m-0.p-0
                    .col-md-6 
                        form(action="/comentarios" method="POST")
                            .form-group     
                                label(for="correo") Correo 
                                input#nombre(type="text",placeholder="Tu correo",name="correo",class="form-control",value=correo)
                            .form-group     
                                label(for="imagen") Imagen 
                                select#nombre(name="imagen",class="form-control") 
                                    option(value="imagen1" name="vacio" selected disabled) seleccione una imagen
                                    option(value="imagen1") imagen1 
                                    option(value="imagen2") imagen2 
                                    option(value="opinion") opinion 
                                //- input#nombre(type="text",placeholder="Tu imagen",name="imagen",class="form-control",value=imagen)
                            .form-group     
                                label(for="opinion") Opinion 
                                input#nombre(type="text",placeholder="Tu opinion",name="opinion",class="form-control",value=opinion)
                            input.btn.btn-succes.btn-block(type="submit")