extends ./layout/index.pug
block compartircontenido 
    h1.text-center  #{pagina}
    main.container.mt-5 
        .lista-iconos 
            .container.py-5.text-center 
                .row 
                    each gerente in gerentes 
                        .col-lg-4.col-md-6.p-0
                            .card.m-4
                                .card-body.p-0.m-5
                                    img(src="img/perfil.jpg" class="img-fluid mb-4")
                                    h2=gerente.nombre
                                    p
                                    | #{gerente.ap_paterno}
                                    p 
                                    | #{gerente.ap_materno}
                                    p 
                                    | #{gerente.telefono}
